# ---- Prime Star Systems ----
arr = np.array([
    [2, 3, 5],
    [14, 6, 8],
    [11, 13, 17],
    [7, 10, 13]])

def remove_nonprime_rows(array):
    keep_rows = []
    for row in array:
        has_prime = False
        for n in row:
            if n >= 2:
                is_prime = True
                for i in range(2, n // 2 + 1):
                    if n % i == 0:
                        is_prime = False
                if is_prime:
                    has_prime = True
        if has_prime:
            keep_rows += [row]
    return np.array(keep_rows)

print(remove_nonprime_rows(arr))      


# ---- Lets Play Checkers ----
def zero_array():
    arr = np.zeros((8, 8), dtype = 'int')
    for i in range(0, 8, 2):
        arr[i, ::2] = 1
        arr[1::2, 1::2] = 1
    return arr
print(zero_array()) 

def reverse_checkerboard():
    arr = np.zeros((8, 8), dtype = 'int')
    arr[::2, 1::2] = 1 
    arr[1::2, ::2] = 1 
    
    return arr

print(reverse_checkerboard())


# ---- Expanding Universe ----
def expand_str(words, spaces):
    space_str = " " * spaces
    expanded = []
    for word in words:
        new_word = ""
        for letter in word[: -1]:
            new_word += letter + space_str
        new_word += word[-1]
        expanded.append(new_word)
    return np.array(expanded)  
print(expand_str("cluster", 1))


# ---- Second Brightest Star ----


def second_brightest(arr):
    sorted_rows = np.sort(arr, axis = 1)[:, ::-1]
    second_value = sorted_rows[:, 1]
    return second_value

np.random.seed(123)
stars = np.random.randint(500, 2000, (5, 5))
print(stars)
print(second_brightest(stars))




